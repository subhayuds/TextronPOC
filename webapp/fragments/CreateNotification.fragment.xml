<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.commons.layout" xmlns:core="sap.ui.core">
  	<Dialog title="Create Notification" class="sapUiPopupWithPadding customDialogHeader" type="Message">
    	<content>
      		<l:MatrixLayout colCount="3">
      			<l:MatrixLayoutRow>
	        		<l:MatrixLayoutCell hAlign="Right">
	        			<Label design="Bold" text="Revision Number:"/>
	        		</l:MatrixLayoutCell>
	        		<l:MatrixLayoutCell class="customMatrixLayoutCellWidth"/>
	        		<l:MatrixLayoutCell hAlign="Left">
	        			<Input value="00010997"/>
	        		</l:MatrixLayoutCell>
		        </l:MatrixLayoutRow>
		        <l:MatrixLayoutRow>
	        		<l:MatrixLayoutCell hAlign="Right">
	        			<Label design="Bold" text="Aircraft Number:"/>
	        		</l:MatrixLayoutCell>
	        		<l:MatrixLayoutCell class="customMatrixLayoutCellWidth"/>
	        		<l:MatrixLayoutCell hAlign="Left">
	        			<Input value="680-0180 (0180)"/>
	        		</l:MatrixLayoutCell>
		        </l:MatrixLayoutRow>
		        <l:MatrixLayoutRow>
	        		<l:MatrixLayoutCell hAlign="Right">
	        			<Label design="Bold" text="CSR Name:"/>
	        		</l:MatrixLayoutCell>
	        		<l:MatrixLayoutCell class="customMatrixLayoutCellWidth"/>
	        		<l:MatrixLayoutCell hAlign="Left">
	        			<Input value="Bary Richardson"/>
	        		</l:MatrixLayoutCell>
		        </l:MatrixLayoutRow>
		        <l:MatrixLayoutRow width="75%">
	        		<l:MatrixLayoutCell hAlign="Right">
	        			<Label design="Bold" text="Equipment Number:"/>
	        		</l:MatrixLayoutCell>
	        		<l:MatrixLayoutCell class="customMatrixLayoutCellWidth"/>
	        		<l:MatrixLayoutCell hAlign="Left">
	        			<Input/>
	        		</l:MatrixLayoutCell>
		        </l:MatrixLayoutRow>
		        <l:MatrixLayoutRow>
	        		<l:MatrixLayoutCell hAlign="Right">
	        			<Label design="Bold" text="Description:"/>
	        		</l:MatrixLayoutCell>
	        		<l:MatrixLayoutCell class="customMatrixLayoutCellWidth"/>
	        		<l:MatrixLayoutCell hAlign="Left">
	        			<TextArea rows="5" cols="25"/>
	        		</l:MatrixLayoutCell>
		        </l:MatrixLayoutRow>
		        <l:MatrixLayoutRow>
	        		<l:MatrixLayoutCell hAlign="Right" colSpan="2">
	        			<Button type="Emphasized" icon="sap-icon://add" text="Create" press="onCreateNotification"/>
	        		</l:MatrixLayoutCell>
	        		<l:MatrixLayoutCell hAlign="Right">
	        			<Button type="Emphasized" icon="sap-icon://sys-cancel" text="Cancel" press="onCloseDialog"/>
	        		</l:MatrixLayoutCell>
				</l:MatrixLayoutRow>
			</l:MatrixLayout>
    	</content>
  </Dialog>
</core:FragmentDefinition>